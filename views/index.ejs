<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Items</h1>
        <a href="/items/new" class="btn btn-primary mb-3">Create New Item</a>
        <ul class="list-group">
            <% items.forEach(item => { %>
                <li class="list-group-item">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h2 class="h5"><%= item.name %></h2>
                            <p><%= item.description %></p>
                        </div>
                        <div>
                            <a href="/items/<%= item._id %>/edit" class="btn btn-secondary btn-sm">Edit</a>
                            <form action="/items/<%= item._id %>/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
